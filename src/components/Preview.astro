---
const previewItems = [
  {
    title: 'Intent Hub & Command Center',
    description: 'Natural language interface with smart suggestions and real-time AI responses.',
    image: 'https://res.cloudinary.com/djli98uhu/image/upload/v1745175978/time-capsule-images/vw5kz9t5qzdqplz2f3tk.jpg'
  },
  {
    title: 'Agent Dashboard',
    description: 'Manage and orchestrate your AI assistants with an intuitive interface.',
    image: 'https://res.cloudinary.com/djli98uhu/image/upload/v1745176107/time-capsule-images/sczmqg04lxux8vw6qgjo.jpg'
  },
  {
    title: 'Memory Vault',
    description: 'Powerful semantic search and timeline visualization of your digital memories.',
    image: 'https://res.cloudinary.com/djli98uhu/image/upload/v1745176165/time-capsule-images/hfomqax3hoknwndbb3hk.jpg'
  }
];
---

<section class="py-24 relative overflow-hidden">
  <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-primary-600/20 rounded-full filter blur-3xl -z-10 animate-pulse-slow"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16" data-animate>
      <h2 class="text-3xl font-bold gradient-text">Experience SymbiOS</h2>
      <p class="mt-4 text-lg text-dark-200">
        Take a closer look at how SymbiOS transforms your digital experience with its intuitive interface and powerful features.
      </p>
    </div>
    
    <div class="space-y-24">
      {previewItems.map((item, index) => (
        <div 
          class="flex flex-col lg:flex-row items-center gap-12"
          data-animate={index % 2 === 0 ? 'fade-right' : 'fade-left'}
        >
          <div class={`lg:w-1/2 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
            <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
            <p class="text-dark-200 mb-6">{item.description}</p>
            <div class="flex flex-wrap gap-4">
              <div class="px-4 py-2 rounded-lg bg-dark-800 text-sm text-dark-200">
                <span class="w-2 h-2 inline-block rounded-full bg-green-500 mr-2"></span>
                Real-time Processing
              </div>
              <div class="px-4 py-2 rounded-lg bg-dark-800 text-sm text-dark-200">
                <span class="w-2 h-2 inline-block rounded-full bg-blue-500 mr-2"></span>
                AI-Powered
              </div>
              <div class="px-4 py-2 rounded-lg bg-dark-800 text-sm text-dark-200">
                <span class="w-2 h-2 inline-block rounded-full bg-purple-500 mr-2"></span>
                Customizable
              </div>
            </div>
          </div>
          <div class={`lg:w-1/2 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-primary-500/20 to-secondary-500/20 rounded-xl filter blur-xl"></div>
              <img 
                src={item.image} 
                alt={item.title}
                class="relative rounded-xl shadow-2xl border border-dark-800/50 w-full"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Interactive Demo CTA -->
   
  </div>
</section>