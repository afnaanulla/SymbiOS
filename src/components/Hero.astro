---
---

<section class="relative pt-24 pb-16 overflow-hidden">
  <!-- Background elements -->
  <div class="absolute top-20 left-1/2 w-96 h-96 bg-secondary-600/20 rounded-full filter blur-3xl -z-10 animate-pulse-slow"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 bg-primary-600/20 rounded-full filter blur-3xl -z-10 animate-pulse-slow"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight" data-animate>
        The Next Generation <br />
        <span class="gradient-text">AI Operating System</span>
      </h1>
      
      <p class="mt-6 text-xl text-dark-200 max-w-3xl mx-auto" data-animate="fade">
        SymbiOS adapts to your needs, learns your patterns, and evolves with you. 
        Experience true human-AI symbiosis.
      </p>
      
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4" data-animate>
        <a 
          href="#features" 
          class="px-8 py-3 rounded-lg bg-gradient-to-r from-secondary-600 to-primary-600 text-white font-medium hover:shadow-lg hover:shadow-secondary-600/20 transition-all duration-300"
        >
          Explore Features
        </a>
        <a 
          href="#docs" 
          class="px-8 py-3 rounded-lg bg-dark-800/80 border border-dark-700 text-white font-medium hover:bg-dark-800 transition-all duration-300"
        >
          Read Documentation
        </a>
      </div>
    </div>
    
    <!-- Hero Graphic -->
    <div class="mt-16 max-w-4xl mx-auto" data-animate>
      <div class="relative aspect-[16/9] rounded-xl overflow-hidden glass glow-border">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-3/4 h-3/4 flex items-center justify-center">
            <!-- Mock OS Dashboard -->
            <div class="relative w-full max-w-3xl aspect-[16/9] bg-dark-950 rounded-lg overflow-hidden border border-dark-800">
              <!-- Header bar -->
              <div class="h-8 bg-dark-900 flex items-center px-3 border-b border-dark-800">
                <div class="flex space-x-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-red-400"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-yellow-400"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-green-400"></div>
                </div>
                <div class="text-xs text-dark-400 mx-auto">SymbiOS Dashboard</div>
              </div>
              
              <!-- Main content -->
              <div class="p-3 grid grid-cols-6 gap-3 h-[calc(100%-2rem)]">
                <!-- Sidebar -->
                <div class="col-span-1 bg-dark-900 rounded-lg p-2 flex flex-col items-center space-y-4">
                  <div class="w-8 h-8 rounded-full bg-primary-600 flex items-center justify-center text-xs">AI</div>
                  <div class="w-6 h-6 rounded-lg bg-dark-800 hover:bg-primary-900 transition-colors"></div>
                  <div class="w-6 h-6 rounded-lg bg-dark-800 hover:bg-primary-900 transition-colors"></div>
                  <div class="w-6 h-6 rounded-lg bg-dark-800 hover:bg-primary-900 transition-colors"></div>
                  <div class="flex-grow"></div>
                  <div class="w-6 h-6 rounded-lg bg-dark-800 hover:bg-primary-900 transition-colors"></div>
                </div>
                
                <!-- Dashboard Area -->
                <div class="col-span-5 grid grid-rows-2 gap-3">
                  <!-- Top row -->
                  <div class="grid grid-cols-2 gap-3">
                    <div class="bg-dark-900 rounded-lg p-3 flex flex-col">
                      <div class="text-xs font-medium text-dark-300 mb-2">Intent Hub</div>
                      <div class="rounded-md bg-dark-800 w-full h-8 flex items-center px-3">
                        <div class="w-32 h-2 bg-dark-700 rounded-full"></div>
                      </div>
                      <div class="mt-3 grid grid-cols-2 gap-2">
                        <div class="bg-dark-800 rounded h-12"></div>
                        <div class="bg-dark-800 rounded h-12"></div>
                      </div>
                    </div>
                    <div class="bg-gradient-to-br from-dark-900 to-primary-950 rounded-lg p-3 flex flex-col">
                      <div class="text-xs font-medium text-dark-300 mb-2">Agent Dashboard</div>
                      <div class="grid grid-cols-3 gap-2">
                        <div class="bg-dark-800/50 rounded h-16 flex items-center justify-center">
                          <div class="w-6 h-6 rounded-full bg-primary-800"></div>
                        </div>
                        <div class="bg-dark-800/50 rounded h-16 flex items-center justify-center">
                          <div class="w-6 h-6 rounded-full bg-secondary-800"></div>
                        </div>
                        <div class="bg-dark-800/50 rounded h-16 flex items-center justify-center">
                          <div class="w-6 h-6 rounded-full bg-dark-700"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Bottom row -->
                  <div class="grid grid-cols-3 gap-3">
                    <div class="col-span-2 bg-dark-900 rounded-lg p-3">
                      <div class="text-xs font-medium text-dark-300 mb-2">Memory Vault</div>
                      <div class="space-y-2">
                        <div class="h-3 bg-dark-800 rounded-full w-11/12"></div>
                        <div class="h-3 bg-dark-800 rounded-full w-3/4"></div>
                        <div class="h-3 bg-dark-800 rounded-full w-5/6"></div>
                        <div class="h-3 bg-dark-800 rounded-full w-2/3"></div>
                      </div>
                    </div>
                    <div class="bg-dark-900 rounded-lg p-3">
                      <div class="text-xs font-medium text-dark-300 mb-2">Settings</div>
                      <div class="flex justify-between items-center mb-2">
                        <div class="w-16 h-2 bg-dark-800 rounded-full"></div>
                        <div class="w-8 h-4 bg-primary-600 rounded-full"></div>
                      </div>
                      <div class="flex justify-between items-center mb-2">
                        <div class="w-12 h-2 bg-dark-800 rounded-full"></div>
                        <div class="w-8 h-4 bg-dark-700 rounded-full"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Stats -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div data-animate="fade">
        <div class="text-3xl font-bold gradient-text">10x</div>
        <p class="mt-2 text-dark-300">Productivity</p>
      </div>
      <div data-animate="fade">
        <div class="text-3xl font-bold gradient-text">99.9%</div>
        <p class="mt-2 text-dark-300">Task Accuracy</p>
      </div>
      <div data-animate="fade">
        <div class="text-3xl font-bold gradient-text">24/7</div>
        <p class="mt-2 text-dark-300">Assistance</p>
      </div>
      <div data-animate="fade">
        <div class="text-3xl font-bold gradient-text">100%</div>
        <p class="mt-2 text-dark-300">Privacy Control</p>
      </div>
    </div>
  </div>
</section>