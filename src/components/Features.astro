<section id="features" class="py-24 relative">
  <div class="absolute top-1/2 left-1/4 w-64 h-64 bg-primary-600/20 rounded-full filter blur-3xl -z-10 animate-pulse-slow"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto" data-animate>
      <h2 class="text-3xl font-bold gradient-text">Features & Capabilities</h2>
      <p class="mt-4 text-lg text-dark-200">
        Discover the powerful features that make SymbiOS the most advanced AI operating system ever designed.
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {features.map((feature, index) => (
        <div 
          class="feature-card glass rounded-xl p-6 border border-dark-800/50 hover:border-primary-800/30 transition-all duration-300"
          data-animate={`fade-${index % 2 === 0 ? 'right' : 'left'}`}
          data-animate-delay={`${(index % 4) * 100}`}
        >
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-primary-900 to-secondary-900 flex items-center justify-center text-white mb-4">
            <Fragment set:html={icons[feature.icon]} />
          </div>
          <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
          <p class="text-dark-300">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>